@model IEnumerable<SuryavanshiLibraryManagmentSyatem.Models.Book>

@{
    ViewData["Title"] = "Index";
}
<body class="table-info">
    <h2>Search</h2>
    @using (Html.BeginForm("Search", "Books", FormMethod.Get))
    {
        <b>Search By: </b>
        @Html.RadioButton("SearchBook","Title",true)
        <text>Title  </text>
        @Html.RadioButton("SearchBook","ISBN")

        <text>ISBN  </text>
        @*@Html.RadioButton("SearchBook","AuthorId")

            <text>AuthorId </text>
            @Html.RadioButton("SearchBook","PublisherId")

            <text>PublisherId </text>*@
        <br />
        <br></br>
        @Html.TextBox("search")
        <button type="submit"><b>Search</b></button>
    }
    <br></br>
    <table class="table " border="2">
        <thead class="tablehead">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ISBN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PublisherId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuthorId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IssuedStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDeleted)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="tablebody"+>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="7" align="center">
                        <b> &#128512;........No    Rows    Match   With   Search   Criteria........ &#128512;</b>
                    </td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ISBN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublisherId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IssuedStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ISBN">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ISBN">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ISBN">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br></br>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</body>